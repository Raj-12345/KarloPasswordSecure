          <form class="p-3" method="POST" action="/forgot">
            <div class="form-group ">
              <label for="exampleInputEmail1">Enter Email</label>
              <input type="text" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
                required>
            </div>



            <button type="submit" class="btn btn-primary">Send</button>
          </form>


        </div>

        <div class="col-xl-4 col-lg-4 col-md-2 col-sm-2   col-1 text-white rounded">

        </div>

      </div>
    </div>

    <div class="container">

      <div class="row">

        <div class="col-xl-4 col-lg-4  col-md-2 col-sm-2 col-1">
        </div>

        <div class="col-xl-4  col-lg-4  col-md-8 col-sm-8  col-10  text-white rounded">

          <% if(sendmail==true)
            {
                 %>
